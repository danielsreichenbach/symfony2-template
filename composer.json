{
    "name": "daniel/symfony2-lts-template",
    "description": "The one true template to rule them all",
    "type": "project",
    "license": "MIT",
    "homepage": "http://marenkay.com",
    "authors": [
        {
            "name": "Daniel S. Reichenbach",
            "email": "daniel@kogitoapp.com",
            "homepage": "http://kogitoapp.com/",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "daniel@kogitoapp.com",
        "issues": "https://scratch.kogitoapp.com/danielsreichenbach/symfony-lts-template/issues",
        "source": "https://scratch.kogitoapp.com/danielsreichenbach/symfony-lts-template"
    },
    "require": {
        "php":                                      ">=5.4.5",
        "ext-curl":                                 "*",
        "ext-pdo_mysql":                            "*",

        "symfony/symfony":                          "~2.7",
        "doctrine/orm":                             "~2.2,>=2.2.3,<2.5",
        "doctrine/dbal":                            "<2.5",
        "doctrine/doctrine-bundle":                 "~1.4",
        "symfony/assetic-bundle":                   "~2.3",
        "symfony/swiftmailer-bundle":               "~2.3",
        "symfony/monolog-bundle":                   "~2.4",
        "sensio/distribution-bundle":               "~3.0,>=3.0.12",
        "sensio/framework-extra-bundle":            "~3.0,>=3.0.2",
        "incenteev/composer-parameter-handler":     "~2.0",

        "doctrine/migrations":                      "1.0.*@dev",
        "doctrine/doctrine-migrations-bundle":      "2.1.*@dev",
        "friendsofsymfony/user-bundle":             "2.0.*@dev",

        "ramsey/uuid":                              "~2.8",
        "league/commonmark":                        "@stable"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle":        "~2.2",
        "sensio/generator-bundle":                  "~2.3",
        "phpspec/phpspec":                          "~2.1",
        "phpunit/phpunit":                          "~4.1",
        "escapestudios/symfony2-coding-standard":   "~2.0"
    },
    "suggest": {
        "ext-xdebug":                               ">=2.2.1"
    },
    "autoload": {
        "psr-4": {
            "": "src/",
            "SymfonyStandard\\": "app/SymfonyStandard/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
