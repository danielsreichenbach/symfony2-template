{% extends "layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block bodyId %}login{% endblock %}
{% block title %}{{ 'layout.login' | trans() }}{% endblock %}

{% block content %}
{% if error %}
  <div>
    <small class="error">{{ error.messageKey | trans(error.messageData, 'security') }}</small>
  </div>
{% endif %}
  <form action="{{ path("fos_user_security_check") }}" method="post" data-abide>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

    <div class="username-field">
      <label for="username">
        {{ 'security.login.username' | trans() }}
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
      </label>
    </div>

    <div class="password-field">
      <label for="password">
        {{ 'security.login.password' | trans() }}
        <input type="password" id="password" name="_password" required="required"/>
      </label>
    </div>

    <div class="remember_me-checkbox">
      <label for="remember_me">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        {{ 'security.login.remember_me' | trans() }}
      </label>
    </div>

    <div class="form-action">
      <input class="button radius" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit' | trans() }}"/>
    </div>
  </form>
{% endblock content %}
